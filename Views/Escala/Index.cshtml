@model IEnumerable<Escala>

@{
    ViewData["Title"] = "Index";
}

<div class="TextEscalaeBut">
    <h2>Escala</h2>

    <p>
        <a asp-action="Create"><img class="But-add" src="~/Imagens/icon-add.png" /></a>
    </p>
</div>

<div>
    @using (Html.BeginForm("Index", "Esacala", FormMethod.Get))
    {
        <p>
            Digite aqui sua pesquisa: @Html.TextBox("pesquisa", "", new{ @class = "pesquisaCargo", placeholder = "Digite sua pesquisa" })
            <input  class=" But-BarraDePesquisa" type="submit" value="Pesquisar" />
        </p>
    }
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoHorario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorarioEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntervaloSaida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntervaloRetorno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorarioSaida)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.DescricaoHorario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntervaloSaida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntervaloRetorno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioSaida)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
