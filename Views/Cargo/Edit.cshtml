@model Cargo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cargo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DescricaoCargo" class="control-label"></label>
                <input asp-for="DescricaoCargo" class="form-control" />
                <span asp-validation-for="DescricaoCargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalarioCargo" class="control-label"></label>
                <input asp-for="SalarioCargo" class="form-control" />
                <span asp-validation-for="SalarioCargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EscalaId" class="control-label"></label>
                <select asp-for="EscalaId" class="form-control" asp-items="ViewBag.EscalaId"></select>
                <span asp-validation-for="EscalaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
