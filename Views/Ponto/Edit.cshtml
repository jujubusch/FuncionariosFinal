@model ProjetoFuncionarios.Models.Ponto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Ponto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HorarioEntrada" class="control-label"></label>
                <input asp-for="HorarioEntrada" class="form-control" />
                <span asp-validation-for="HorarioEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaidaAlmoco" class="control-label"></label>
                <input asp-for="SaidaAlmoco" class="form-control" />
                <span asp-validation-for="SaidaAlmoco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoltaAlmoco" class="control-label"></label>
                <input asp-for="VoltaAlmoco" class="form-control" />
                <span asp-validation-for="VoltaAlmoco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioSaida" class="control-label"></label>
                <input asp-for="HorarioSaida" class="form-control" />
                <span asp-validation-for="HorarioSaida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label"></label>
                <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId"></select>
                <span asp-validation-for="FuncionarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
