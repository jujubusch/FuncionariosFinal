@model IEnumerable<Ponto>

@{
    ViewData["Title"] = "Index";
}
<div class="TextEscalaeBut">
    <h2>Ponto</h2>

    <p>
        <a asp-action="Create"><img class="But-add" src="~/Imagens/icon-add.png" /></a>
    </p>
</div>
<div>
    @using (Html.BeginForm("Index", "Ponto", FormMethod.Get))
    {
        <p>
            @Html.TextBox("pesquisa", "", new{ @class = "pesquisaCargo", placeholder = "Digite sua pesquisa" })
            <input class=" But-BarraDePesquisa" type="submit" value="Pesquisar" />
        </p>

    }

</div>
   

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HorarioEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaidaAlmoco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VoltaAlmoco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorarioSaida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.HorarioEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaidaAlmoco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VoltaAlmoco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioSaida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionario.NomeFuncionario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
